<Window x:Class="Shop.RandomBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        xmlns:control="clr-namespace:Shop"
        xmlns:uc="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="RandomBook" Height="300" Width="800">
    <Grid Background="Cornsilk">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <control:RandomBookUC Grid.Column="0" Grid.Row="0"/>
        <control:FirstUC Grid.Column="1" Grid.Row="0"/>
    </Grid>
</Window>
